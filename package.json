{
  "scripts": {
    "build": "npx tailwindcss -i ./input.css -o ./output.css",
    "watch": "npx tailwindcss -i ./input.css -o ./output.css --watch",
    "build:prod": "npx tailwindcss -i ./input.css -o ./output.css --minify",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.4"
  }
}